@model PrototypeTopCoder.Models.SimpleTestProblemModel

<fieldset>
    <div class="display-label">Question</div>
    <div class="display-field">
        @Html.Raw(Model.Question)
    </div>
    <div class="display-label">Answers</div>
    <ol> 
    @foreach (string option in Model.Options)
    {
        <li>
            @Html.Label(option)
        </li>
    }
    </ol>
    <div class="display-label">Correct Answer</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CorrectAnswer)
    </div>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Delete", "DeleteTask", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "ViewTasks", "Admin")
</p>

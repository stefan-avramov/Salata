@if(Object.Equals(Session["isLogged"], true))
{
    <text>
		@if ((bool)Session["isAdmin"])
		{
			@Html.Label("welcome, " + Session["username"] + "!");
		}
		else
		{
			<text>
				welcome, @Html.ActionLink(Session["username"] as string, "OwnProfile", "Profile") !
			</text>
		}

        <div class="welcome">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src="@Url.Content("~/Content/img/wheel.png")" alt="Settings" class="settingsWheel" />
            </a>
            <ul class="dropdown-menu">
                <li><a href="#">profile</a></li>
                <li><a href="#">use as a teacher</a></li>
                <li class="divider"></li>
                <li>@Html.ActionLink("log off", "LogOff", "Account")</li>
            </ul>
        </div>
    </text>
}
else
{
    @:@Html.ActionLink("Log On", "LogOn", "Account")
}

@model PrototypeTopCoder.Models.HumanGradableProblemModel

@{
    ViewBag.Title = "CreateHumanGradableProblem";
}

<div class="header">Create a human-gradable problem</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("CreateHumanGradableProblem", "Admin", new { id = (string)Request.RequestContext.RouteData.Values["id"] }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Question)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ViewTasks")
</div>
